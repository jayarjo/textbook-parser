# Dockerfile for Illustration Interpreter Service
# AI vision models for image understanding

FROM python:3.9-slim

WORKDIR /app

# Install minimal dependencies
RUN pip install --no-cache-dir \
    openai==1.6.1 \
    anthropic==0.8.1 \
    google-generativeai==0.3.2 \
    pillow==10.1.0 \
    loguru==0.7.2 \
    pydantic==2.5.3 \
    python-dotenv==1.0.0

# Copy only necessary source files
COPY src/__init__.py src/
COPY src/illustration_interpreter/ src/illustration_interpreter/

# Expose port for API
EXPOSE 8005

# Run as non-root user
RUN useradd -m -u 1000 parser && chown -R parser:parser /app
USER parser

CMD ["python", "-m", "src.illustration_interpreter.illustration_interpreter"]
